# Environment configuration for Attention-Based Neural Networks
# Copy this file to .env and modify the values as needed

# Dataset configuration
DATASET_PATH=./flickr8k
IMAGES_DIR=./flickr8k/images
CAPTIONS_FILE=./flickr8k/captions.txt

# Model configuration
MODEL_SAVE_PATH=./models
CHECKPOINT_DIR=./checkpoints
LOG_DIR=./logs

# Training configuration
BATCH_SIZE=32
LEARNING_RATE=0.001
EPOCHS=100
EMBEDDING_DIM=256
HIDDEN_DIM=512
VOCAB_SIZE=10000
MAX_LENGTH=20

# Hardware configuration
DEVICE=cuda  # or cpu
NUM_WORKERS=4
PIN_MEMORY=true

# Jupyter configuration
JUPYTER_PORT=8888
JUPYTER_IP=0.0.0.0
JUPYTER_TOKEN=
JUPYTER_PASSWORD=

# Logging configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Development configuration
DEBUG=false
TESTING=false
